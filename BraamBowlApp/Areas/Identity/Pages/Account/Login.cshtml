
@page
@model LoginModel
@{
    ViewData["Title"] = "Log in to BraamBowl 🥗";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/logincss.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1>Log in to BraamBowl 🥗</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="success-message">🎉 @TempData["SuccessMessage"]</div>
                    }
                    <form id="account" method="post">
                        <h2>Access Your Healthy Eats 🌱</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><span class="emoji">📧</span>Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password"><span class="emoji">🔒</span>Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <span class="emoji">🔔</span>Remember Me
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"><span class="emoji">✅</span>Log in</button>
                        </div>
                        <div class="mt-3 text-center">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary"><span class="emoji">🔄</span>Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary"><span class="emoji">✨</span>Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary"><span class="emoji">📬</span>Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
